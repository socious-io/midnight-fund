{
  "name": "@crowdfunding/crowdfunding-cli",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "type": "module",
  "packageManager": "yarn@4.9.2",
  "scripts": {
    "testnet-remote": "node --loader ts-node/esm --experimental-specifier-resolution=node dist/launcher/testnet-remote.js",
    "standalone": "node --experimental-specifier-resolution=node dist/launcher/standalone.js",
    "fund": "tsx src/fund.ts",
    "test": "yarn test-e2e",
    "test-e2e": "NODE_OPTIONS=--experimental-vm-modules jest  --detectOpenHandles --forceExit",
    "build": "rm -rf dist && tsc --project tsconfig.build.json",
    "lint": "eslint src"
  },
  "dependencies": {
    "@crowdfunding/crowdfunding-api": "workspace:*",
    "@crowdfunding/crowdfunding-contract": "workspace:*",
    "@midnight-ntwrk/ledger": "^4.0.0",
    "@midnight-ntwrk/midnight-js-network-id": "^2.0.0",
    "@midnight-ntwrk/wallet": "^5.0.0",
    "pino": "^8.16.1",
    "pino-pretty": "^10.2.3",
    "rxjs": "^7.8.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.15.21",
    "@types/ws": "^8.5.9",
    "allure-commandline": "^2.32.0",
    "allure-jest": "^3.0.5",
    "allure-js-commons": "^3.0.5",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.19.2",
    "typescript": "^5.2.2"
  }
}
